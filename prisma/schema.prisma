generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id            String      @id @default(uuid())
    nickname      String
    email         String      @unique
    password      String
    emailVerified Boolean     @default(false)
    trainnings    Trainning[]
}

model Trainning {
    id        String     @id @default(uuid())
    name      String
    isActive  Boolean    @default(false)
    exercises Exercise[]

    userId String
    user   User   @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model Exercise {
    id          String @id @default(uuid())
    name        String
    description String
    category    String
    restTime    Int
    weight      Int
    repetitions Int
    series      Int

    trainningId String
    trainning   Trainning @relation(fields: [trainningId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
